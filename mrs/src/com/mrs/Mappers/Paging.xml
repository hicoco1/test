<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 이쿼리를 이용하기 위해선 namespace명.id로 접근하면 된다. 파라미터를 map으로 넘겼기 때문에 타입을 정의해줘야한다. 
	resultType는 Integer로 줬다. int는 안된다 클래스 타입으로 줘야한다. -->
<mapper namespace="Paging">

	<sql id="oracleHead">
		SELECT
		B.*
		FROM
		(
		SELECT
		A.*,ROWNUM AS RNUM
		FROM
		(
	</sql>
	<sql id="oracleTail">
		) A
		) B
		WHERE
		RNUM BETWEEN ((#PAGE_NUM#-1)*#PAGE_SIZE#+1) AND #PAGE_NUM#*#PAGE_SIZE#
	</sql>


	<sql id="mysql">
		<if test="pageNo != 0 and pageNo != null">
			LIMIT ${(pageNo -1) * pageSize}, ${pageSize}
		</if>
	</sql>
</mapper>